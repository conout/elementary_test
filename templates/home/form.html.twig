{% extends 'base.html.twig' %}
{% block body %}

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('home') }}">Объявления</a></li>
            {% if car is defined %}
                <li class="breadcrumb-item"><a href="{{ path('view', { 'id' : car.id } ) }}">{{ car.title }}</a></li>
            {% endif %}
            <li class="breadcrumb-item active" aria-current="page">{{ title }}</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-8 col-md-8 col-sm-12">
            <h1>
                {{ title }}
            </h1>

            {{ form(form) }}

        </div>
        <div class="col-lg-4 col-md-4 col-sm-12">
        </div>
    </div>

{% endblock %}