{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-lg-8 col-md-8 col-sm-12">
            <h1>
                {{ title }}
            </h1>

            <a href="{{ path('create') }}" class="btn btn-primary">Добавить объявление</a>

            <div class="mt-3 mb-3">
                {% for car_item in car %}
                    <hr>
                    <div class="row mb-3">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <a href="{{ path('view', { 'id' : car_item.id }) }}"><strong>{{ car_item.title }}</strong></a><br>
                            {{ car_item.brand.title }} ({{ car_item.country.title }})<br>
                            <strong>Год</strong> {{ car_item.year }}.
                            <strong>Цена</strong> {{ car_item.price }}.
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-3">
                            <a class="btn btn-primary float-right" href="{{ path('update', { 'id' : car_item.id }) }}">Редактировать</a>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-3">
                            <a class="btn btn-danger float-right" href="{{ path('delete', { 'id' : car_item.id }) }}">Удалить</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-12">
            <h2>Фильтр</h2>
            {{ form(form) }}
        </div>
    </div>

{% endblock %}