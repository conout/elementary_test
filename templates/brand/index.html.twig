{% extends 'base.html.twig' %}
{% block body %}

    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <h1>
                {{ title }}
            </h1>

            <a href="{{ path('brand_create') }}" class="btn btn-primary">Добавить марку</a>

            <div>
                {% for brand_item in brand %}
                    <hr>
                    <div class="row mb-3">
                        <div class="col-lg-6 col-md-6 col-sm-6">{{ brand_item.title }}</div>
                        <div class="col-lg-3 col-md-3 col-sm-3">
                            <a class="btn btn-primary float-right" href="{{ path('brand_update', { 'id' : brand_item.id }) }}">Редактировать</a>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-3">
                            <a class="btn btn-danger float-right" href="{{ path('brand_delete', { 'id' : brand_item.id }) }}">Удалить</a>
                        </div>
                    </div>
                {% endfor %}
            </div>

        </div>
        <div class="col-lg-4 col-md-4 col-sm-12">
        </div>
    </div>

{% endblock %}