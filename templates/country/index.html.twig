{% extends 'base.html.twig' %}
{% block body %}

    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <h1>
                {{ title }}
            </h1>

            <a href="{{ path('country_create') }}" class="btn btn-primary">Добавить страну</a>

            <div class="mt-3 mb-3">
                {% for country_item in country %}
                    <hr>
                    <div class="row mb-3">
                        <div class="col-lg-6 col-md-6 col-sm-6">{{ country_item.title }}</div>
                        <div class="col-lg-3 col-md-3 col-sm-3">
                            <a class="btn btn-primary float-right" href="{{ path('country_update', { 'id' : country_item.id }) }}">Редактировать</a>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-3">
                            <a class="btn btn-danger float-right" href="{{ path('country_delete', { 'id' : country_item.id }) }}">Удалить</a>
                        </div>
                    </div>
                {% endfor %}
            </div>


        </div>
        <div class="col-lg-4 col-md-4 col-sm-12">
        </div>
    </div>

{% endblock %}